@model MvcApp.Controllers.EmpleadosController.CrearEmpleadoViewModel

<h2>Crear</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <div class="form-group">
        <label class="control-label" for="Nombre">Nombre:</label>
        @Html.TextBoxFor(x => x.Nombre, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Nombre, "", new { @class = "help-block" })
        <span class="glyphicon glyphicon-remove form-control-feedback" data-icono-ok="glyphicon-ok"></span>
    </div>

    <div class="form-group">
        <label class="control-label" for="Nit">Nit:</label>
        @Html.TextBoxFor(x => x.Nit, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Nit, "", new { @class = "help-block" })
        <span class="glyphicon glyphicon-remove form-control-feedback" data-icono-ok="glyphicon-ok"></span>
    </div>

    <div>
        <button type="submit" class="btn btn-default">Crear</button>
    </div>
}
